<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    android:background="@color/niceBlueBackground"
        android:layout_gravity="center">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="STANJE RAČUNA"
        android:layout_marginBottom="20dp"
        android:id="@+id/amountBtn"
        android:background="@drawable/roundbuttontransparent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="IZVRŠI TRANSAKCIJU"
        android:layout_marginBottom="20dp"
        android:id="@+id/transactionBtn"
        android:background="@drawable/roundbuttontransparent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="SEF ZA POHRANU INFORMACIJA"
        android:id="@+id/safeBtn"
        android:background="@drawable/roundbuttontransparent"/>

</LinearLayout>

