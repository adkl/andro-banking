<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/niceBlueBackground"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="25sp"
        android:textColor="#DDDDDD"
        android:text="Izmijenite trenutno pohranjene informacije:"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textColor="#DDDDDD"
        android:backgroundTint="#FFFFFF"
        android:id="@+id/safeEditText"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:text="POTVRDA"
        android:textColor="#DDDDDD"
        android:background="@drawable/roundbuttontransparent"
        android:id="@+id/confirmSafeEditBtn"/>


</LinearLayout>