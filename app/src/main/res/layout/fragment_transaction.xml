<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/niceBlueBackground"
    android:layout_margin="25dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#DDDDDD"
        android:text="TRANSAKCIJA"
        android:layout_marginBottom="35dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#DDDDDD"
        android:text="Broj računa na koji se šalje novac:"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#DDDDDD"
        android:textColorHint="#999999"
        android:backgroundTint="#FFFFFF"
        android:hint="npr. 1610000003210032"
        android:id="@+id/accNumberEditText"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#DDDDDD"
        android:layout_marginTop="20dp"
        android:text="Iznos novca u KM:"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:id="@+id/amountEditText"
        android:textColor="#DDDDDD"
        android:backgroundTint="#FFFFFF"
        android:textColorHint="#999999"
        android:textSize="20sp"
        android:hint="npr. 200.00"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#DDDDDD"
        android:id="@+id/confirmTransactionBtn"
        android:background="@drawable/roundbuttontransparent"
        android:text="POTVRDA"/>

</LinearLayout>